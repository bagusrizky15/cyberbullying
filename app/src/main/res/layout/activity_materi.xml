<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MateriActivity">

    <ImageButton
        android:backgroundTint="@color/white"
        android:id="@+id/btn_help"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_help"/>

    <ImageButton
        android:backgroundTint="@color/white"
        android:id="@+id/btn_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_exit"/>

    <ImageButton
        android:scaleType="centerCrop"
        android:id="@+id/btn_definisi"
        android:backgroundTint="@color/white"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/btn_definisi"
        android:layout_marginTop="-400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:scaleType="fitCenter"
        android:id="@+id/btn_bentuk"
        android:backgroundTint="@color/white"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:src="@drawable/btn_bentuk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_definisi"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:scaleType="fitCenter"
        android:id="@+id/btn_faktor"
        android:backgroundTint="@color/white"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:src="@drawable/btn_faktor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_bentuk"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:scaleType="fitCenter"
        android:id="@+id/btn_dampak"
        android:backgroundTint="@color/white"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:src="@drawable/btn_dampak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_bentuk"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:scaleType="centerCrop"
        android:id="@+id/btn_tips"
        android:backgroundTint="@color/white"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:src="@drawable/btn_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_dampak"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/btn_tips"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_materi"/>

</androidx.constraintlayout.widget.ConstraintLayout>